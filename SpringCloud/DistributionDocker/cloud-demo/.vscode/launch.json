{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ]
        },
        {
            "name": "Java Console App",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasenameNoExtension}",
            "classpath": [
                ".",
                "${fileDirname}"
            ],
            "externalConsole": true
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch EurekaApplication",
            "request": "launch",
            "mainClass": "cn.itcast.eureka.EurekaApplication",
            "projectName": "eureka-server"
        },
        {
            "type": "java",
            "name": "Launch GatewayApplication",
            "request": "launch",
            "mainClass": "cn.itcast.gateway.GatewayApplication",
            "projectName": "gateway"
        },
        {
            "type": "java",
            "name": "Launch OrderApplication",
            "request": "launch",
            "mainClass": "cn.itcast.order.OrderApplication",
            "projectName": "order-service"
        },
        {
            "type": "java",
            "name": "Launch UserApplication",
            "request": "launch",
            "mainClass": "cn.itcast.user.UserApplication",
            "projectName": "user-service"
        }
    ]
}